<build>

  <!-- 
   BuildProperties.xml

   A build.properties file allows you to pass build properties to the 
   command-line builder in a single file. To use this xml properties file
   you must provide your build executable with the following command-line 
   parameters:
   build.exe -p <xml properties file>
   If you do not provide an absolute path to your build.properties file,
   the builder will look for it in the same directory as your project.
  -->

  <!--
   The following properties in your build properties file will control 
   which of the platforms in your InstallAnywhere project are built and 
   whether or not a VM is included.
  -->
  
  <!--OverrideAllPlatformSettings="<true/false>"-->
  
  <!--BuildLinuxWithVM="<true/false>"-->
  <!--BuildLinuxWithoutVM="<true/false>"-->
  <!--LinuxVMpackLocation="<path_to_file>"-->
  
  <!--BuildAIXWithVM="<true/false>"-->
  <!--BuildAIXWithoutVM="<true/false>"-->
  <!--AIXVMpackLocation="<path_to_file>"-->
  
  <!--BuildSolarisWithVM="<true/false>"-->
  <!--BuildSolarisWithoutVM="<true/false>"-->
  <!--SolarisVMpackLocation="<path_to_file>"-->
  
  <!--BuildHPUXWithVM="<true/false>"-->
  <!--BuildHPUXWithoutVM="<true/false>"-->
  <!--HPUXVMpackLocation="<path_to_file>"-->

  <!--BuildNamedUnixWithVM="<true/false>"-->
  <!--BuildNamedUnixWithoutVM="<true/false>"-->
  <!--NamedUnixVMpackLocation="<path_to_file>"-->
  <!--NamedUnixTitle="<name_of_unix>"-->
  
  <!--BuildUnixAll="<true/false>"-->
  
  <!--BuildMacOSX="<true/false>"-->
  <!--WantAuthenticationMacOSX="<true/false>"-->
  <!--WantAuthenticationMacOSXShowGUI="<true/false>"-->
  
  <!--BuildWindowsWithVM="<true/false>"-->
  <!--BuildWindowsWithoutVM="<true/false>"-->
  <!--WindowsVMpackLocation="<path_to_file>"-->
  
  <!--BuildPureJava="<true/false>"-->
   
  <!--
   The following properties determine the default UI for your installer.  
   Acceptable values are "Silent", "GUI", or "Console".
  -->
  <!--UnixDefaultUI="<Silent/GUI/Console>"-->
  <!--WindowsDefaultUI="<Silent/GUI/Console>"-->

  <!--
   The following properties control which types of installers are 
   built with your project and where the output is located.
  -->
  <!--BuildWebInstaller="<true/false>"-->
  <!--BuildCDROMInstaller="<true/false>"-->
  <!--BuildMergeModule="<true/false>"-->
  <!--BuildReadOnlyMergeModule="<true/false>"-->
  <!--BuildOutputLocation="<path_to_directory>"-->
  <!--BuildWorkdirLocation="<path_to_directory>"-->
  
  <!--
   The following properties control whether or not the build 
   optimizes installers for the platform for which they are built.
  -->
  <!--OptimizeWebInstaller="<true/false>"-->
  <!--OptimizeCDROMInstaller="<true/false>"-->
  <!--OptimizeMergeModule="<true/false>"-->

  <!--
   The following properties control the settings on the installer.
  -->
  <!--InstallerStdOutRedirect="<path_to_file>"-->
  <!--InstallerStdErrRedirect="<path_to_file>"-->
  <!--InstallerValidVMList="<1.3+, 1.6*>"-->
  <!--InstallerInitialHeapSize="<16777216>"-->
  <!--InstallerMaxHeapSize="<50331648>"-->

  <!--
   The following properties control build options when the project is 
   loaded and saved.
  -->
  <!--AutoPopulateLabels="<true/false>"-->
  <!--AutoCleanComponents="<true/false>"-->

  <!--
   The following properties control build target settings. Each <target>
   element appends one new target to those already in the InstallAnywhere 
   project. There can be multiple <target> elements. The <outputDir> and 
   <bundledVM> elements are optional. Each <target> element must include 
   a <buildWithVM> element, a <buildWithNoVM> element, or both.
  -->
  <!-- 
  <configuration>
     <target platform="<aix/hpux/solaris/hpux/unixwithvm/macosx/java/unix/windows>">
         <outputDir><output_directory></outputDir>
         <buildWithVM><true/false></buildWithVM>
         <buildWithNoVM><true/false></buildWithNoVM>
         <bundledVM><path_to_file></bundledVM>
     </target>
      
  </configuration>
  -->

</build>
